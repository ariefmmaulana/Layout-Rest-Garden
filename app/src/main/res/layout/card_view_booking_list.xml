<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_bookingList"
    android:layout_margin="5dp"
    android:backgroundTint="@color/bgCardContact"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardConstraint"
        android:padding="16dp">

        <ImageView
            android:id="@+id/contact_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_rectangle_88"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="280dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/contact_image"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/contact_job"
            android:textColor="@color/black"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/contact_name"
            app:layout_constraintEnd_toStartOf="@+id/contact_image"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>