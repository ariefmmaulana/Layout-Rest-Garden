<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterBookingFragment">

    <ImageView
        android:id="@+id/iv_afterBooking_restGarden"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:background="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="173dp"/>

    <TextView
        android:id="@+id/tv_afterBooking_thankyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_afterBooking_restGarden"
        android:layout_marginTop="50dp"
        android:textSize="50dp"
        android:text="@string/Thank_You"
        android:textColor="@color/green" />

    <Button
        android:id="@+id/btn_transaction_signin"
        android:layout_width="147dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/green"
        android:text="@string/Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_afterBooking_thankyou" />

</androidx.constraintlayout.widget.ConstraintLayout>